@using TravelTripProject.Models.Siniflar
@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Listesi</h2>
<br />
<table class="table table-hover">
    <tr>
    <th>#</th>
    <th>Başlık</th>
    <th>Sil</th>
    <th>Güncelleme</th>
    </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Baslik</td>
                <td><a href="/Admin/BlogSil/@item.ID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Admin/BlogGetir/@item.ID" class="btn btn-success">Güncelleme</a></td>
            </tr>
        }
</table>
<a href="/Admin/YeniBlog/" class="btn btn-primary">Yeni Blog</a>

